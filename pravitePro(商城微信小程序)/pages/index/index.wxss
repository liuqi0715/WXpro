/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
/* //页面样式 */
.topInfo{
  font-size: 25rpx;
  height: 45rpx;
  line-height: 45rpx;
}
swiper{
  height: 160px;
}
text{
  margin-left:30rpx;
  height:50rpx;
  display:block;
  float:left;
  margin-bottom:5px;
  font-size: 30rpx;

}
.slide-image{
  width: 100%;
}
.logo{
  width:15%;
  float:left;
  height:50rpx;
}
.default{
  color: black;
  /* height:  */
}
 .is_selected{
  color: #C3D600;
  border-bottom: 1px solid #C3D600;

}
.is_selected::after {
  position: absolute;
  content: "";
  left: 0;
  bottom: -3px;
  /* background: red; */
  height: 2px;
  width: 100%;
}
.discount{
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-top:1px solid #BDBDBD;
  margin-top: 40rpx; 
}
.countFlower{
  width: 100%;
  overflow-x: scroll;
  /* height: 120px; */
}
.countF{
  width: 100%;
  float: left;
  height:100%;
  overflow: hidden;
}
.countView{
  width:21%;
  float:left;
  border-radius:5px;
  margin-left:3%;
  border:1px solid #BDBDBD;
  height:193px;

/* display:flex; flex-direction:row; */
}
.contain{
  width: 160%;
}
.nature{
  text-align: center;
  margin-top: 20rpx;
  border-top: 1px solid #BDBDBD;
  padding-top: 40rpx;
}
.natureTips{
  font-size: 20rpx;
  text-align: center;
  display: block;
  margin: 10rpx auto;
  color:#BDBDBD;
}
.viewContain{
  width: 96%;
  margin: 0 auto;
}
.natureImg{
  width: 48%;
  height: 350px;
  float: left;
  margin-bottom: 20rpx;
  border: 1px solid #BDBDBD;
  border-radius: 5px;
}
.natureImg:nth-child(even){
  margin-left: 2%;
}














