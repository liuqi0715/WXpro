<!--pages/login/login.wxml-->
<view class='head' wx:for="{{title}}" wx:key="{{item.id}}">
<image mode='' src='{{item.img}}' />
<navigator class='text_color text_font sign_word' url='../Login/Login'>登录</navigator>
</view>
<view class='login'>
  <form bindsubmit="formSubmit">
    <view class='login_input'>
      <view><text class='text_font left_line'>+86</text></view>
      <input placeholder='请输入您的手机号'></input>
    </view>
    <!-- 密码框 -->
    <view  class='login_input'>
      <input placeholder='请输入收到的验证码'></input>
      <text class='text_font right_line'>获取验证码</text>
    </view>
    <view>
      <text class='sigin_agree'>注册代表您已经同意</text><text class='text_font'>《超级推荐用户协议》</text>
    </view>
    <view class='login_btn'>
      <button class='bg_color' formType="submit">注册超级招聘</button>
    </view>
  </form>
</view>