/* pages/OfflineActivity/Activity/Activity.wxss */
.content{
  margin: 10px 0px 15px 0px;
  padding-top: 15px;
  border-top: 1px solid #EEEEEE;
  float: left;
}
.content_left{
  width: 60px;
  font-size: 15px;
  float: left;
  color: #333333;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 10px;
}
.content_right{
  width: calc(100% - 70px);
  font-size: 15px;
  float: right;
  color: #666666;
  padding-right: 10px;
}
.clear_float{
  clear: both;
}
.bottom_color{
  height: 10px;
  background-color: #EEF3FA;
}
.theme_name{
  padding: 10px 0px 0px 10px;
}
image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.text_color_word{
  font-size: 15px;
  color: #666666;
}
.line{
  width: 25px;
  height: 3px;
  background-color: #EE7700;
  margin: 10px 0px;
}
.service{
  padding: 15px 15px 15px 10px;
}
.bottom{
  background-color: #EE7700;
  text-align: center;
  height: 50px;
  padding-top: 15px;
  color: white;
  position: fixed;
  bottom: 0px;
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.bottom_left{
  border-right: 1px solid white;
  width: 50%;
}
.bottom_right{
  width: 49%;
}
.text_color_black{
  color: #333333;
}
page{
  padding-bottom: 60px;
}