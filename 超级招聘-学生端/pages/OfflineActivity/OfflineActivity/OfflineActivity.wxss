/**app.wxss**/

@import "/lib/iconfont.wxss";

page{
  color: #666;
   background: #EEEEEE; 
}
view,
text{
  box-sizing: border-box;
}
.bg_color{
	background-color: #ED7701!important;
  color: #fff!important;
}
.text_color{
	color: #ED7701!important;
}
.flex_aic{
  display: flex;
  align-items: center;
}
.flex_acjb{
  display: flex;
  align-items: center;
  justify-content: center;
}
.text_333{
  color: #333;
}

/* 筛选样式 */

.nav {
  height: 50px;
  padding: 20px 10px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  font-size: 40rpx;
  position: relative;
}

.nav_list {
  padding: 0 10px;
  margin: 10px 0;
  line-height: 1;
  flex-grow: 1;
  text-align: center;
  color: #333;
  font-size: 15px;
}

.nav_li_tit {
  margin-left: 10px;
}

.nav_li_tit .icon-xiala {
  margin-left: 5px;
  color: #d3d3d3;
}
.nav_li_right{
  border-right: 1px solid #ccc;
}

.zhiwu_box {
  position: absolute;
  top: 50px;
  left: 0;
  overflow: hidden;
  width: 100vw;
  z-index: 1;
}

.box_bg {
  position: fixed;
  top: 60px;
  left: 0;
  width: 100vw;
  height: calc(100vh - 50px);
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
}

.box_list {
  position: relative;
  left: 0;
  top: 0;
  z-index: 2;
  background-color: #fff;
}

.box_li {
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  border-bottom: 1px solid #eee;
  font-size: 30rpx;
}
.text_color_black{
  color: #333333;
}
image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  /* position: relative; */
  /* left: 30rpx; */
}
.theme{
  background: #fff;
}
.theme_name{
  padding: 10px 0px 0px 10px;
}
.content{
  margin: 10px 0px 15px 0px;
  padding-top: 15px;
  border-top: 1px solid #EEEEEE;
  float: left;
}
.content_left{
  width: 60px;
  font-size: 15px;
  float: left;
  color: #333333;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 10px;
}
.box_img image{
  width: 50px;
  height: 50px;
}
.content_right{
  width: calc(100% - 70px);
  font-size: 15px;
  float: right;
  color: #666666;
  padding-right: 10px;
}
.city{
  font-size: 15px;
  /* position: relative; */
   /* padding-left: 10px;  */
  /* left: 30rpx; */
}
.navli{
  padding: 10rpx 10rpx 0rpx 10rpx!important;
  margin: 15rpx 40rpx 0rpx 0rpx;
  border-radius: 5px;
  height: 50rpx;
  font-size: 30rpx;
}
.clear_float{
  clear: both;
}
.bottom_color{
  height: 10px;
  background-color: #eee;
}
.navto{
  display: flex;
  justify-content: space-between;
}