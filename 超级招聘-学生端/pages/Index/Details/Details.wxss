/* 企业详情 */

.qiye_details {
  background: white;
}

.qiye_zhiwei {
  padding-bottom: 14px;
  border-bottom: 2px solid #ed7701;
}

.xiangqin_top {
  margin: 10px 10px 0px 10px;
  padding: 15px 0px;
  text-align: center;
  color: black;
  border-bottom: 1px solid #eee;
}

.xiangqin_top text:nth-child(2) {
  margin: 0 40px;
  color: #eee;
}

/* 企业简介 */

.qiye_intro {
  padding: 15px 10px;
  background: white;
}

.icon-qiyeguanli {
  font-size: 40rpx;
  color: salmon;
  margin-right: 10px;
}

.little_title {
  font-size: 40rpx;
  color: black;
}

.intro_detail {
  font-size: 25rpx;
}

.icon-xia {
  color: red;
  text-align: center;
  margin-top: 10px;
}

/* 内容控制字符串 */

.intro_detail {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 35rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 1.8;
}

.all_detail {
  font-size: 35rpx;
  line-height: 1.8;
}

.icon_shang {
  transform: rotate(-180deg);
  transform-origin: 50%;
}

/* 发展历程 */

.icon-huiyuanfazhanqushi {
  font-size: 50rpx;
  color: salmon;
  margin-right: 10px;
  margin-top: 20rpx;
}

.licheng_title {
  color: black;
  font-size: 30rpx;
}

.qiye_undergo {
  padding: 10px 10px;
  margin-top: 10px;
  background: white;
}

.qiye_fazhan {
  border-bottom: 1px solid #eee;
