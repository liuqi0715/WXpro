/* pages/RetrievePassword/RetrievePassword.wxss */
.RP{
  padding: 10px;
}
.RP input{
  border: 1px solid #ccc;
  margin-top: 10px;
  padding: 10px;
  border-radius: 5px;
}
.RP_yzm{
  display: flex;
   align-items: flex-end; 
  justify-content: space-between;
}
.RP_yzm input{
  flex: 1;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.RP_yzm view{
  width: calc(5em + 20px);
  height: calc(1.4rem + 22px);
  background-color: #dbdbdb;
  border-top-right-radius: 5px; 
  border-bottom-right-radius: 5px; 
  padding: 0 10px;
  line-height: calc(1.4rem + 22px);
  color: #000;
}
.RP .bg_color{
  margin-top: 20px;
  width: 80%;
  border-radius: 25px;
}