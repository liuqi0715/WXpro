/* pages/ResumeDetails/ResumeDetails.wxss */
page{
  background-color: #ebf0f3;
}
.RD_user{
  background: linear-gradient(#ED7701,#ffb367);
  padding: 20px 0 10px;
}
.RD_user view{
  text-align: center;
}
.RD_user image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #fff;
  margin: 0 auto;
}
.RD_user .RD_userInfo{
  color: #fff;
  font-size: 30rpx;
  position: relative;
}

.RD_user_state{
  display: block;
  position: absolute;
  right: calc(50vw - 90px);
  top: 0;
  font-size: 25rpx;
  padding: 0 10px;
  border: 1px solid #fff;
  border-radius: 8px;
  background-color: #feba79;
}

.details{
  margin-bottom: 10px;
  padding: 10px;
  background: #fff;
}
.details_tit{
  font-size: 40rpx;
  color: #333;
}
.details_tit view:first-child{
  padding-bottom: 5px;
}
.details_tit_bottom{
  width: 1em;
  height: 3px;
}
.details_content{
  padding: 10px 0;
  font-size: 30rpx;
}
.details_content view{
  padding: 3px 0;
}
.info{
  margin-left: 3em;
}
.info text{
  margin-right: 10px;
}
.info_textColor{
  color: #999;
}
.qiuzhi{
  font-size: 30rpx;
}
.qiuzhi text:first-child{
  color: #333;
}
.work_experience .WE_name{
  font-size: 30rpx;
}
.work_experience .WE_name text:first-child{
  color: #333;
}
.work_experience .details_tit_bottom{
  padding: 0;
  margin-bottom: 10px;
}

.edu_bg{
  font-size: 30rpx;
}
.edu_bg text:first-child{
  color: #333;
}
.bottom_btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
  text-align: center;
}
.inappropriate{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1px solid #eee;
  font-size: 28rpx;
  justify-content: center;
}
.invitation{
  flex: 1;
  height: 100%;
  line-height: 50px;
}
.already_invited{
  background-color: #aaa;
  line-height: 50px;
  color: #fff;
}
.bottom_box{
  height: 51px;
}

.AI_box{
  /* position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh; */
}
.ai_bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
}
.ai_box{
  position: fixed;
  top: 105px;
  width: calc(100% - 10%);
  margin: 0 5%;
  padding: 15px 10px 20px;
  background-color: #fff;
  border-radius: 10px;
  text-align: center;
}
.ai_box view{
  color: #999;
  font-size: 30rpx;
}
.ai_box .ai_tit{
  margin: 5px 0 15px;
  font-size: 34rpx;
}