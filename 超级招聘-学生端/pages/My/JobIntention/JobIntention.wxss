page{
  background-color:#EBF0F3;
}


/* 表单 */

.lists{
  background-color:#fff;
  padding:0 10px;
  margin-bottom:10px;
}
.lists .list{
  border-bottom:1px solid #EBEBEB;
  padding:10px 0;
  font-size:14px;
}
.lists .list:last-child{
  border:0;
}
.lists .list .right{
  flex-grow: 1;
  margin-left:20px;
  text-align: right;
}



.lists .hidden{
  display: none;
}


/* 时间选择 */
#data{
  flex-grow:1;
  text-align: right;
}
/* 关键字 */
.keyword{
  margin-top:10px;
}


.save-btn {
    width: 60%;
    height: 80rpx;
    margin: 0 auto;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: #EE7700;
    border-radius:60px;
    color: #fff;
    margin-top:15px;
}

