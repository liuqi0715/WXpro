/* pages/My/MyTestOne/MyTestOne.wxss */
.content{
  padding: 20px 15px 0px 15px;
}
.text_font{
  color: #666666;
  font-size: 17px;
}
.text_black{
  color: #333333;
  font-size: 18px;
  font-weight: bold;
  margin: 0px 5px;
}

.choose{
   padding: 10px 0;

}
.choose radio-group{
  display: flex;
  align-items: center;
}
.btn{
  margin-top: 20px;
}
.btn button{
  border-radius: 20px;
}

.btn2{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.btn2 navigator{
  width: 40%;
  border-radius: 10px;
  height: 40px;
  text-align: center;
  line-height: 40px;
}
.previous{
  border: 1px solid;
  background: #fff;
}
/* 单选样式 */
.ui-radio radio,.ui-radio checkbox {
  display: none;
}
.ui-radio{
  flex-grow: 1;
  margin-right: 20px;
  padding: 5px 10px;
  background-color: #ccc;
  border-radius: 5px;
  color: white;
  text-align: center;
}
.ui-radio:nth-child(5n){
  margin-right: 0;
}
.ui-radio .text {
/*设计样式*/
  
}
.ui-radio.checked .text {
/*设计样式*/
  background-color: #ED7701;
  color: #fff;
}